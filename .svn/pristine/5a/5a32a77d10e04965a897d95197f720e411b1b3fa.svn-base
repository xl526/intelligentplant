<script>
  $(function () {
	// 基于准备好的dom，初始化echarts实例
      var myChart = echarts.init(document.getElementById('pieChart'));

      // 指定图表的配置项和数据
      var option = {
    		    tooltip: {
    		        trigger: 'item',
    		        formatter: "{a} <br/>{b}: {c} ({d}%)"
    		    },
    		    legend: {
    		        //orient: 'vertical',
    		        //x: 'left',
    		        data:['运行','关机','准备','急停']
    		    },
    		    color:['#5cb85c','#5bc0de','#f0ad4e','#d9534f'],
    		    series: [
    		        
    		        {
    		            //name:'访问来源',
    		            type:'pie',
    		            label: {
    		                normal: {
    		                    show: true,
    		                    formatter:'{b}:{c}台'
    		                },
    		                emphasis: {
    		                    show: true
    		                }
    		            },
    		            data:[
    		                {value:2, name:'运行'},
    		                {value:1, name:'关机'},
    		                {value:1, name:'准备'},
    		                {value:1, name:'急停'}
    		            ]
    		        }
    		    ]
    		};

      // 使用刚指定的配置项和数据显示图表。
      myChart.setOption(option);
      
      myChart1 = echarts.init(document.getElementById('lineChart'));
      
      option1 = {
  		    tooltip: {
  		        trigger: 'item',
  		        formatter: "{a} <br/>{b}: {c} ({d}%)"
  		    },
  		    legend: {
  		        //orient: 'vertical',
  		        //x: 'left',
  		        data:['加工时间','准备时间','故障时间','暂停时间']
  		    },
  		    color:['#5cb85c','#5bc0de','#f0ad4e','#d9534f'],
  		    series: [
  		        
  		        {
  		            //name:'访问来源',
  		            type:'pie',
  		            label: {
  		                normal: {
  		                    show: true,
  		                    formatter:'{b}:{d}%'
  		                },
  		                emphasis: {
  		                    show: true
  		                }
  		            },
  		            data:[
  		                {value:58, name:'加工时间'},
  		                {value:23, name:'准备时间'},
  		                {value:10, name:'故障时间'},
  		                {value:9, name:'暂停时间'}
  		            ]
  		        }
  		    ]
  		};
      
      myChart1.setOption(option1);
  });
</script>
